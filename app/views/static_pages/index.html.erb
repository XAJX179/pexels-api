<% if @search_result %>

  <div class="links">
    <% if @res['prev_page'] %>
      <%= link_to "Prev", prev_page(@res), data: { turbo_method: :post } %>
    <% end %>
  </div>

  <div class="image">
    <%= image_tag image_link(@res) %>
  </div>

  <div class="links">
    <% if @res['next_page'] %>
      <%= link_to "Next", next_page(@res), data: { turbo_method: :post } %>
    <% end %>
  </div>

<% else %>

  <div class="form">

    <p>
      Number of collections:
      <%= @my_collections.size %>
    </p>

    <%= form_with url: :search do |f| %>
      <%= f.label :collection_id %>
      <%= f.select :collection_id, @my_collections %>
      <%= f.submit "See Collection" %>
    <% end %>

  </div>
<% end %>
